!!! 5
%html
  %head
    %meta{ :charset => "utf-8" }
    %meta{ :"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
    %meta{ :"http-equiv" => "Content-Type", :content => "text/html" }
    %meta{ :name => "viewport", :content => "width=device-width" }

    %title {{original_filename}} (Shared with Servus for Mac.)

    :javascript
      if ( top !== self ) { top.location = self.location.href; }

    %link{ :rel => "stylesheet", :type => "text/css", :href => "https://assets.servus.io/3/bootstrap.min.css" }
    %link{ :rel => "stylesheet", :type => "text/css", :href => "https://assets.servus.io/3/servus.css" }
    %link{ :rel => "stylesheet", :type => "text/css", :href => "https://assets.servus.io/3/font-awesome.css" }
    /[if IE 7 ]
      %link{ :rel => "stylesheet", :type => "text/css", :href => "https://assets.servus.io/3/font-awesome-ie7.css" }
    %link{ :rel => "stylesheet", :type => "text/css", :href => "https://fonts.googleapis.com/css?family=Arimo:400,700&subset=latin,latin-ext,greek,greek-ext,vietnamese,cyrillic,cyrillic-ext" }

  %body
    #main-content.container-fluid
      .row-fluid
        .span12

          #download-details.popover.top
            .arrow
            %h3.popover-title
              {{original_filename}}
            .popover-content
              %p.file-icon
                {{#is_message}}
                %i.icon-mail
                {{/is_message}}

                {{#is_contact}}
                %i.icon-user
                {{/is_contact}}

                {{#is_archive}}
                %i.icon-folder-close
                {{/is_archive}}

                {{#is_text}}
                %i.icon-align-left
                {{/is_text}}

                {{#is_pdf}}
                %i.icon-book
                {{/is_pdf}}

                {{#is_image}}
                %img.img-rounded{ :src => "{{file_link}}", :title => "{{original_filename}}" }
                {{/is_image}}

                {{#is_video}}
                %i.icon-film
                {{/is_video}}

                {{#is_audio}}
                %i.icon-headphones
                {{/is_audio}}

                {{#is_unknown_type}}
                %i.icon-paper-clip
                {{/is_unknown_type}}

              %p.file-size
                {{file_size}}

          %p#download-link
            %a.btn.btn-success{ :href => "{{file_link}}" }
              %i.icon-download
              Download / Direct Link


    #sharing.btn-group.dropup
      %button.btn.dropdown-toggle{ :"data-toggle" => "dropdown", :title => "Share this page" }
        %i.icon-share
      %ul.dropdown-menu.pull-right
        %li
          %a{ :href => "https://twitter.com/intent/tweet?original_referer=&text=TEXT&url=https%3A%2F%2Ftwitter.com%2Fabout%2Fresources%2Fbuttons%23tw&via=servusio" }
            %i.icon-twitter
            Twitter
        %li
          %a{ :href => "#" }
            %i.icon-facebook
            Facebook
        %li
          %a{ :href => "#" }
            %i.icon-google-plus
            Google+


    %script{ :src => "https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js" }
    %script{ :src => "https://assets.servus.io/3/bootstrap.min.js" }
    %script{ :src => "https://assets.servus.io/3/servus.js" }

